# backend/.env.example

APP_NAME="Pré-Registro Gaming"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Frontend URL (para CORS)
FRONTEND_URL=http://localhost:5173

# Database (SQL Server)
DB_CONNECTION=sqlsrv
DB_HOST=127.0.0.1
DB_PORT=1433
DB_DATABASE=preregistro_db
DB_USERNAME=sa
DB_PASSWORD=SuaSenhaAqui

# Cache & Session
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Email (SMTP)
MAIL_MAILER=smtp
MAIL_HOST=smtp.seuprovedor.com
MAIL_PORT=587
MAIL_USERNAME=seu@email.com
MAIL_PASSWORD=suasenha
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="${MAIL_USERNAME}"
MAIL_FROM_NAME="${APP_NAME}"

# Queues (recomendado para produção)
QUEUE_CONNECTION=sync  # troque para "database" em prod e rode queue:work

# =============================================
# WhatsApp Cloud API (OPCIONAL)
# =============================================
# Deixe vazio se não quiser usar WhatsApp ainda
# Configure depois seguindo: https://developers.facebook.com/docs/whatsapp

WHATSAPP_TOKEN=
WHATSAPP_PHONE_ID=
WHATSAPP_TEMPLATE_AUTH=otp_login
WHATSAPP_LANG=pt_BR
OTP_TTL_MINUTES=10

# =============================================
# Configurações de Segurança
# =============================================
# Logs
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug